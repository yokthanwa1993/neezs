rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Images and files uploaded by users
    match /{allPaths=**} {
      // Allow read access to all files
      allow read: if true;
      
      // Allow write access to authenticated users
      allow write: if request.auth != null;
    }
    
    // Specific rules for job uploads - match both paths
    match /jobs/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /uploads/jobs/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Specific rules for experience uploads
    match /experiences/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Specific rules for profile uploads
    match /uploads/profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}