{
  "projects": {
    "default": "neeiz-01"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "app/dist",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      { "source": "**", "headers": [ { "key": "Cache-Control", "value": "no-store" } ] }
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "functions": {
    "source": "functions"
  }
}


