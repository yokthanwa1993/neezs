{
  "name": "dyad-apps",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "concurrently -k \"pnpm -C app dev\" \"pnpm -C web dev\"",
    "dev:app": "pnpm -C app dev",
    "dev:web": "pnpm -C web dev",
    "build": "pnpm -C app build && pnpm -C web build",
    "build:app": "pnpm -C app build",
    "build:web": "pnpm -C web build"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0"
  }
}
